<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xynu.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.xynu.entity.User">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="info" property="info" jdbcType="INTEGER"/>
        <result column="is_valid" property="isValid" jdbcType="INTEGER"/>
    </resultMap>
    <sql id="base_column_list">
        id,username,password,info, is_valid
    </sql>
    <sql id="base_table" >
        user
    </sql>

    <select id="check" resultType="java.lang.Integer">
        select count(1) FROM
        <include refid="base_table"/>
        WHERE
        username = #{username,jdbcType=VARCHAR}
        AND
        password = #{password,jdbcType=VARCHAR}
        AND
        info = #{info,jdbcType=INTEGER}
        AND
        is_valid = 1
    </select>

    <insert id="insert" parameterType="com.xynu.entity.User" >
        INSERT INTO
        <include refid="base_table"/>
        (username,password,info)
        VALUES (#{username,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR},#{info,jdbcType=INTEGER})
    </insert>
    <select id="selectAllUser" resultMap="BaseResultMap">
        select
        <include refid="base_column_list"/>
        FROM
        <include refid="base_table"/>
        WHERE
        info = 0
    </select>
</mapper>